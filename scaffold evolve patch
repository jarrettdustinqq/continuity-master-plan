@@ -0,0 +1,68 @@
+import json
+from pathlib import Path
+
+def score_contains(text: str, expected: list[str]) -> float:
+    hit = 0
+    for token in expected:
+        if token.lower() in text.lower():
+            hit += 1
+    return hit / max(1, len(expected))
+
+def main():
+    data = Path("evals/golden_set.jsonl").read_text().splitlines()
+    # Placeholder: wire this to your agent runner later.
+    # For now we just validate the dataset shape.
+    total = 0
+    for line in data:
+        row = json.loads(line)
+        assert "input" in row and "expected_contains" in row
+        total += 1
+    print(f"OK: loaded {total} eval cases. Next: connect agent outputs to scoring.")
+
+if __name__ == "__main__":
+    main()
